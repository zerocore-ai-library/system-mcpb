{
  "manifest_version": "0.3",
  "name": "system",
  "display_name": "System MCP",
  "version": "0.1.0",
  "description": "System utilities for AI agents (sleep, datetime, random)",
  "icon": "icon.png",
  "license": "Apache-2.0",
  "author": {
    "name": "Stephen Akinyemi"
  },
  "server": {
    "type": "binary",
    "entry_point": "dist/system",
    "mcp_config": {
      "command": "${__dirname}/dist/system",
      "args": [],
      "env": {}
    }
  },
  "compatibility": {
    "platforms": [
      "darwin",
      "linux",
      "win32"
    ]
  },
  "tools": [
    {
      "name": "sleep",
      "description": "Pause execution for a specified duration in milliseconds"
    },
    {
      "name": "get_datetime",
      "description": "Get the current UTC date and time"
    },
    {
      "name": "get_random_integer",
      "description": "Generate a random integer within an inclusive range [min, max]"
    }
  ],
  "_meta": {
    "store.tool.mcpb": {
      "scripts": {
        "build": "cargo build --release && mkdir -p dist && cp target/release/system dist/"
      },
      "compatibility": {
        "platforms": [
          "darwin-arm64",
          "darwin-x86_64",
          "linux-arm64",
          "linux-x86_64",
          "win32-arm64",
          "win32-x86_64"
        ]
      },
      "static_responses": {
        "tools/list": {
          "tools": [
            {
              "name": "sleep",
              "description": "Pause execution for a specified duration in milliseconds",
              "input_schema": {
                "type": "object",
                "properties": {
                  "duration_ms": {
                    "type": "integer",
                    "description": "Duration to sleep in milliseconds (0 to 300000)"
                  }
                },
                "required": [
                  "duration_ms"
                ]
              },
              "output_schema": {
                "type": "object",
                "properties": {
                  "slept_ms": {
                    "type": "integer",
                    "description": "Actual duration slept in milliseconds"
                  }
                },
                "required": [
                  "slept_ms"
                ]
              }
            },
            {
              "name": "get_datetime",
              "description": "Get the current UTC date and time",
              "input_schema": {
                "type": "object",
                "properties": {},
                "required": []
              },
              "output_schema": {
                "type": "object",
                "properties": {
                  "iso8601": {
                    "type": "string",
                    "description": "UTC timestamp in ISO 8601 format"
                  },
                  "unix_ms": {
                    "type": "integer",
                    "description": "Unix timestamp in milliseconds"
                  }
                },
                "required": [
                  "iso8601",
                  "unix_ms"
                ]
              }
            },
            {
              "name": "get_random_integer",
              "description": "Generate a random integer within an inclusive range [min, max]",
              "input_schema": {
                "type": "object",
                "properties": {
                  "min": {
                    "type": "integer",
                    "description": "Minimum value (inclusive)"
                  },
                  "max": {
                    "type": "integer",
                    "description": "Maximum value (inclusive)"
                  }
                },
                "required": [
                  "min",
                  "max"
                ]
              },
              "output_schema": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "integer",
                    "description": "Random integer in range [min, max]"
                  }
                },
                "required": [
                  "value"
                ]
              }
            }
          ]
        }
      }
    }
  },
  "documentation": "https://github.com/zerocore-ai-library/system-mcpb"
}
